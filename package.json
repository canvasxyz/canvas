{
  "name": "canvas",
  "private": true,
  "type": "module",
  "scripts": {
    "appstore": "npm run dev --workspace=@canvas-js/example-app-store",
    "dev-example-chat": "GENERATE_SOURCEMAP=false npm run dev --workspace=@canvas-js/example-chat-client",
    "dev": "tsc --build --watch",
    "build": "tsc --build --clean && tsc --build",
    "clean": "tsc --build --clean",
    "publish-cli": "npm publish --workspace=@canvas-js/cli --access public",
    "publish-core": "npm publish --workspace=@canvas-js/core --access public",
    "publish-hooks": "npm publish --workspace=@canvas-js/hooks --access public",
    "publish-interfaces": "npm publish --workspace=@canvas-js/interfaces --access public",
    "test": "npm run test --workspace=@canvas-js/core"
  },
  "workspaces": [
    "packages/canvas-cli",
    "packages/canvas-interfaces",
    "packages/canvas-core",
    "packages/canvas-hooks",
    "packages/example-app-store",
    "packages/example-chat-client",
    "packages/example-chat-server",
    "packages/canvas-rpc",
    "packages/canvas-bootstrap-peer"
  ]
}
