{
  "name": "canvas",
  "private": true,
  "version": "0.6.0-alpha3",
  "type": "module",
  "scripts": {
    "dev": "tsc --build --watch",
    "build": "tsc --build",
    "clean": "tsc --build --clean",
    "lint": "eslint .",
    "publish": "npm run build && npm publish --workspace=packages --access public",
    "test": "npm run test --workspace=@canvas-js/core --workspace=@canvas-js/interfaces",
    "chain-test": "npm run test --workspace=@canvas-js/interfaces"
  },
  "workspaces": [
    "packages/*",
    "examples/*"
  ],
  "devDependencies": {
    "@ava/typescript": "^4.1.0",
    "@types/node": "^20.6.3",
    "@typescript-eslint/eslint-plugin": "^6.7.2",
    "@typescript-eslint/parser": "^6.7.2",
    "ava": "^5.3.1",
    "eslint": "^8.49.0",
    "eslint-plugin-import": "^2.28.1",
    "typescript": "^5.2.2"
  }
}
