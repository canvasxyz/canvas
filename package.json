{
  "name": "canvas",
  "private": true,
  "type": "module",
  "scripts": {
    "dev-example": "GENERATE_SOURCEMAP=false npm run dev --workspace=canvas-example-webpack",
    "dev": "tsc --build --watch",
    "build": "tsc --build",
    "clean": "tsc --build --clean",
    "publish-cli": "npm publish --workspace=@canvas-js/cli --access public",
    "publish-core": "export FORCE_COLOR=1 && npm run build --workspace=@canvas-js/core && npm publish --workspace=@canvas-js/core --access public",
    "publish-hooks": "npm publish --workspace=@canvas-js/hooks --access public",
    "publish-interfaces": "npm publish --workspace=@canvas-js/interfaces --access public",
    "test": "npm run test --workspace=@canvas-js/core"
  },
  "workspaces": [
    "packages/canvas-cli",
    "packages/canvas-interfaces",
    "packages/canvas-core",
    "packages/canvas-hooks",
    "packages/example-webpack"
  ],
  "devDependencies": {
    "npm-run-all": "^4.1.5"
  }
}
