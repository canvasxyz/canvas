{
  "name": "canvas",
  "private": true,
  "version": "0.5.0-alpha4",
  "type": "module",
  "scripts": {
    "dev": "tsc --build --watch",
    "build": "tsc --build",
    "clean": "tsc --build --clean",
    "lint": "eslint .",
    "publish": "npm run build && npm publish --workspace=packages --access public",
    "test": "npm run test --workspace=@canvas-js/core --workspace=@canvas-js/interfaces",
    "chain-test": "npm run test --workspace=@canvas-js/interfaces"
  },
  "workspaces": [
    "packages/*",
    "examples/*"
  ],
  "devDependencies": {
    "@ava/typescript": "^4.1.0",
    "@types/node": "^20.4.5",
    "@typescript-eslint/eslint-plugin": "^5.62.0",
    "@typescript-eslint/parser": "^5.62.0",
    "ava": "^5.3.1",
    "eslint": "^8.45.0",
    "typescript": "^5.1.6"
  }
}
