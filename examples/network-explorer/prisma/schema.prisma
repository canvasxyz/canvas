generator client {
  provider = "prisma-client-js"
  previewFeatures = ["typedSql"]
}

datasource db {
  provider = "sqlite"
  url      = env("INDEX_DATABASE_URL")
}


model Address {
  topic String
  address String

  @@map("addresses")
  @@id([topic, address])
}

model Message {
  topic String
  message_id String @id
  type String

  @@map("messages")
  @@index([type])
  @@index([topic])
}
