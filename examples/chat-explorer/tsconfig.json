    { "path": "../../packages/chain-atp" },
    { "path": "../../packages/chain-cosmos" },
    { "path": "../../packages/chain-ethereum" },
    { "path": "../../packages/chain-ethereum-viem" },
    { "path": "../../packages/chain-solana" },
    { "path": "../../packages/chain-substrate" },
    { "path": "../../packages/signatures" },
  ]
}
