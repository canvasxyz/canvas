{
  "$schema": "https://railway.com/railway.schema.json",
  "build": {
    "builder": "NIXPACKS",
    "buildCommand": "npm run build && ./install-prod.sh && VITE_CANVAS_WS_URL=wss://chat-example.canvas.xyz npm run build --workspace=examples/chat",
    "watchPatterns": [
      "/packages/network-explorer/**",
      "/packages/cli/**",
      "/examples/chat/**",
      "/examples/core/**"
    ]
  },
  "deploy": {
    "startCommand": "canvas run examples/chat/src/contract.ts --static examples/chat/dist --network-explorer --admin 0x34C3A5ea06a3A67229fb21a7043243B0eB3e853f --topic chat-example.canvas.xyz"
  }
}
